<body class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <form class="form-signin">
                    <img class="mb-4" src="https://cdn.shopify.com/s/files/1/2987/8756/t/3/assets/favicon.png?2589"
                        alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Please Fill The Following Details</h1>
                    <label for="mobileno" class="sr-only">Enter Mobile Number</label>
                    <input type="number" style="margin-bottom:10px;" id="mobileno" class="form-control"
                        placeholder="Mobile Number" required autofocus>
                    <label for="dhmac" class="sr-only">Enter Datahub Mac</label>
                    <input type="text" style="margin-bottom:10px;" id="dhmac" class="form-control"
                        placeholder="Datahub Mac" required>
                    <button class="btn btn-lg btn-block" style="background-color: #1f4986;color: white;"
                        type="submit">Generate OTP</button>
                </form>
            </div>
            <div class="col-sm-12" id="otpdiv" style="display: none;">
                <div class="form-signin">
                    <label for="otp" class="sr-only">Eter OTP</label>
                    <input type="text" style="margin-bottom:10px;" id="otp" class="form-control" placeholder="Enter OTP"
                        required>
                    <button class="btn btn-lg btn-block" style="background-color: #1f4986;color: white;"
                        onclick="verifyOTP()">Verify OTP</button>
                </div>
                <!-- TODO add error block-->
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('form').submit(function (e) {
                e.preventDefault(); // prevents page reloading
                var mobileNumber = $('#mobileno').val();
                var dhmac = $('#dhmac').val();

                var filter = /^\d*(?:\.\d{1,2})?$/;
                var regex = /^((([0-9A-F]{2}:){5})|(([0-9A-F]{2}-){5})|([0-9A-F]{10}))([0-9A-F]{2})$/i;

                if (filter.test(mobileNumber)) {
                    if (mobileNumber.length != 10) {

                        alert('Please put 10  digit mobile number');
                        return false;
                    }
                } else {
                    alert('Not a valid number');
                    return false;
                }

                if (!regex.test(dhmac)) {
                    alert('Please enter a valid Mac Address');
                    return false;
                }

                $.get(`/api/otp/generateotp/${mobileNumber}/${dhmac}`, function (data, status) {

                    if (data.success) {
                        $("#otpdiv").css({ "display": "block" });
                    }

                }).fail(function (data) {
                    if (!data.success) {
                        alert('Invalid Mobile Number or Mac Address')
                    }
                });

            });

        })

        function verifyOTP() {
            var otp = $('#otp').val();
            var dhmac = $('#dhmac').val();
            var mobileNumber = $('#mobileno').val();
            var macVal = dhmac.replaceAll(':', '');
            if (otp == "" || otp == undefined) {
                alert('Enter the OTP');
                return false;
            }
            otp = otp.trim();
            var alphaNumericRegex = /^[A-Za-z0-9]+$/;
            if (!alphaNumericRegex.test(otp)) {

                alert('Invalid OTP [No Special Character and White Space are allowed].');

                return false;

            }
            if (otp.length > 6 || otp.length < 5) {
                alert('Invalid OTP.')

                return false;
            }
            console.log(otp)
            $.get(`/api/otp/verifyotp/${dhmac}/${otp}/${mobileNumber}`, function (data, status) {
                if (data.success) {
                    $("#otpdiv").css({ "display": "none" });
                    $('#otpdiv').val('');
                    $('#dhmac').val('');
                    $('#mobileno').val('');
                    let key = data.id;
                    console.log('success OTP')
                    console.dir(data);
                    window.open(`/terminal/${key}`, '_blank');
                }
            }).fail(function (data) {
                alert(data.responseJSON.msg);
            });
        }
    </script>
</body>

